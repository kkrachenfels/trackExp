<h1>Hello, User: <%= current_user.username %>!</h1>
<h2>Transactions</h2>

<table>
  <tr>
    <th>Date </th>
    <th>Name </th>
    <th>Amount </th>
    <th>Type </th>
    <th>Account </th>
  </tr>
  <% @transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.tDate %></td>
      <td><%= link_to transaction.name, user_transaction_path(@user, transaction) %></td>
      <td><%= transaction.amount %></td>
      <td><%= transaction.tType %></td>
      <td><%= transaction.account.accountName %></td>
    </tr>
  <% end %>
</table>

<p></p>
<%= link_to "Add New Transaction", new_user_transaction_path(@user, @transactions) %>

<p></p>
<%= link_to "View Accounts", user_accounts_path(@user) %>
