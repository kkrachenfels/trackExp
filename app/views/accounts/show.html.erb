<h1>List of transactions for Account: <%= @account.accountName %></h1>

<table>
  <tr>
    <th>Date </th>
    <th>Name </th>
    <th>Amount </th>
    <th>Type </th>
  </tr>
  <% @account.transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.tDate %></td>
      <td><%= link_to transaction.name, user_transaction_path(@user, transaction) %></td>
      <td><%= transaction.get_signed_amount %></td>
      <td><%= transaction.get_type %></td>
    </tr>
  <% end %>
</table>

<h3>Account Balance: <%= @account.balance %></h3>

<p><%= link_to "Edit Account Name", edit_user_account_path(@user, @account) %><br>
<%= link_to "Delete Account", user_account_path(@user, @account), data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %></p>



<p></p>
<%= link_to "Back to All Accounts", user_accounts_path(@user) %>
